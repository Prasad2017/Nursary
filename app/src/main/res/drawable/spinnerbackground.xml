<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="0" android:endColor="#EBEBEB" android:startColor="#EBEBEB" android:type="linear" />

                    <stroke android:width="0.5dp" android:color="#EBEBEB" />

                    <corners android:radius="5dp"/>

                     <padding  android:left="5dp" android:top="2dp" android:bottom="2dp" android:right="5dp"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right|center" android:src="@drawable/arrow" android:tint="@color/light_black"/>
            </item>
        </layer-list>
    </item>
</selector>