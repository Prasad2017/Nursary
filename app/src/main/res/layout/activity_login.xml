<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_with_alpha"
    tools:context=".Activity.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/loginLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                app:siRadius="10dp"
                android:visibility="visible"
                android:src="@drawable/plantlogo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OTP Request"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="0dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:background="@drawable/editextborder"
                    android:src="@drawable/india"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/loginborder"
                    android:text="+91"
                    android:fontFamily="@font/montserratmedium"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:cursorVisible="true"
                    android:fontFamily="@font/montserratmedium"
                    android:hint="Enter Mobile Number"
                    android:textColorHint="@color/black"
                    android:digits="0123456789"
                    android:layout_marginRight="15dp"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:background="@drawable/rightloginborder"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Enter Your Mobile Number"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/montserratmedium"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="We Will send you a OTP Code"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/montserratmedium"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/signIn"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserratmedium"
                android:background="@drawable/button_back"
                android:text="SEND"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SIGN UP"
                android:textColor="@color/red_900"
                android:padding="5dp"
                android:fontFamily="@font/montserratbold"
                android:layout_marginTop="5dp"
                android:layout_gravity="center|right"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="20dp"
                android:textSize="17dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtOr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="OR"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txtOr"
                    android:background="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtOr"
                    android:background="@color/black" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/carborder"
                android:gravity="center"
                android:text="SignUp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                android:background="@color/white"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/reversebikeborder"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
