<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ledgerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/txtborder"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/receivedAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Received Amount"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:fontFamily="@font/montserratmedium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:id="@+id/balanceAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Balance Amount"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:fontFamily="@font/montserratmedium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:id="@+id/totalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total Amount"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserratmedium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/paymentIn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Payment In"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/updateborder"
                        android:backgroundTint="@color/green_900"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratmedium"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>

                    <TextView
                        android:id="@+id/paymentOut"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Payment Out"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/updateborder"
                        android:backgroundTint="@color/red"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/montserratmedium"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:layout_gravity="center"
                    android:background="@drawable/txtborder"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:text="Bill No."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:layout_gravity="center"
                    android:background="@drawable/txtborder"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:text="Date"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:layout_gravity="center"
                    android:background="@drawable/txtborder"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:text="Vou. Type"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:layout_gravity="center"
                    android:background="@drawable/txtborder"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:text="Debit"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    android:layout_gravity="center"
                    android:background="@drawable/txtborder"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:text="Credit"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/customerRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/txtborder"
                android:layout_marginEnd="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/noCategorytxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="17sp"
        android:layout_centerInParent="true"
        android:text="No Ledger Found"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"
        android:layout_gravity="center"
        android:gravity="center"/>

</RelativeLayout>