<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/white"
    tools:context=".Fragment.CustomerRegistration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserratbold"
            android:text="Add New Product"/>

        <Spinner
            android:id="@+id/taxType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:autofillHints="Select Tax Type"
            android:background="@drawable/spinnerbackground"/>

        <Spinner
            android:id="@+id/productCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:autofillHints="Select Category"
            android:background="@drawable/spinnerbackground"/>

        <Spinner
            android:id="@+id/subProductCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:autofillHints="Select Sub Category"
            android:background="@drawable/spinnerbackground"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            whatever:boxCornerRadiusBottomEnd="5dp"
            whatever:boxCornerRadiusBottomStart="5dp"
            whatever:boxCornerRadiusTopEnd="5dp"
            whatever:boxCornerRadiusTopStart="5dp"
            android:gravity="center"
            whatever:boxStrokeColor="@color/light_black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/light_black">

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/botanicalName"
                whatever:testErrorString="Enter Valid Name"
                whatever:emptyErrorString="Please Fill This"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Botanical Product Name *"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:singleLine="true"
                android:drawableStart="@drawable/ic_filter_vintage_black_24dp"
                android:backgroundTint="@color/green_900"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/black"
                android:textColorHint="@color/green_900"
                android:textSize="17sp"
                tools:ignore="HardcodedText" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            whatever:boxCornerRadiusBottomEnd="5dp"
            whatever:boxCornerRadiusBottomStart="5dp"
            whatever:boxCornerRadiusTopEnd="5dp"
            whatever:boxCornerRadiusTopStart="5dp"
            android:gravity="center"
            whatever:boxStrokeColor="@color/light_black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/light_black">

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/productName"
                whatever:testErrorString="Enter Valid Name"
                whatever:emptyErrorString="Please Fill This"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Common Name *"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:drawableStart="@drawable/ic_filter_vintage_black_24dp"
                android:singleLine="true"
                android:backgroundTint="@color/green_900"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/black"
                android:textColorHint="@color/green_900"
                android:textSize="17sp"
                tools:ignore="HardcodedText" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/productSize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Plant Size *"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:drawablePadding="10dp"
            android:background="@drawable/spinnerbackground"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/black"
            android:textColorHint="@color/green_900"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/productBagSize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Bag / Container Size *"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:drawablePadding="10dp"
            android:background="@drawable/spinnerbackground"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/black"
            android:textColorHint="@color/green_900"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            whatever:boxCornerRadiusBottomEnd="5dp"
            whatever:boxCornerRadiusBottomStart="5dp"
            whatever:boxCornerRadiusTopEnd="5dp"
            whatever:boxCornerRadiusTopStart="5dp"
            android:gravity="center"
            whatever:boxStrokeColor="@color/light_black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/light_black">

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/cgst"
                whatever:testErrorString="Enter Valid CSGT"
                whatever:emptyErrorString="Please Fill This"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CGST *"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:digits="0123456789"
                whatever:maxNumber="3"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:drawableStart="@drawable/percent"
                android:singleLine="true"
                android:backgroundTint="@color/green_900"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/black"
                android:textColorHint="@color/green_900"
                android:textSize="17sp"
                tools:ignore="HardcodedText" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            whatever:boxCornerRadiusBottomEnd="5dp"
            whatever:boxCornerRadiusBottomStart="5dp"
            whatever:boxCornerRadiusTopEnd="5dp"
            whatever:boxCornerRadiusTopStart="5dp"
            android:gravity="center"
            whatever:boxStrokeColor="@color/light_black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/light_black">

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/sgst"
                whatever:testErrorString="Enter Valid SGST"
                whatever:emptyErrorString="Please Fill This"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SGST *"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:digits="0123456789"
                android:drawablePadding="10dp"
                android:padding="15dp"
                whatever:maxNumber="3"
                android:drawableStart="@drawable/percent"
                android:singleLine="true"
                android:backgroundTint="@color/green_900"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/black"
                android:textColorHint="@color/green_900"
                android:textSize="17sp"
                tools:ignore="HardcodedText" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            whatever:boxCornerRadiusBottomEnd="5dp"
            whatever:boxCornerRadiusBottomStart="5dp"
            whatever:boxCornerRadiusTopEnd="5dp"
            whatever:boxCornerRadiusTopStart="5dp"
            android:gravity="center"
            whatever:boxStrokeColor="@color/light_black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/light_black">

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/igst"
                whatever:testErrorString="Enter Valid IGST"
                whatever:emptyErrorString="Please Fill This"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IGST *"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:digits="0123456789"
                android:drawablePadding="10dp"
                whatever:maxNumber="3"
                android:padding="15dp"
                android:drawableStart="@drawable/percent"
                android:singleLine="true"
                android:backgroundTint="@color/green_900"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/black"
                android:textColorHint="@color/green_900"
                android:textSize="17sp"
                tools:ignore="HardcodedText" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            whatever:boxCornerRadiusBottomEnd="5dp"
            whatever:boxCornerRadiusBottomStart="5dp"
            whatever:boxCornerRadiusTopEnd="5dp"
            whatever:boxCornerRadiusTopStart="5dp"
            android:gravity="center"
            whatever:boxStrokeColor="@color/light_black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/light_black">

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/retailerAmount"
                whatever:testErrorString="Enter Valid Amount"
                whatever:emptyErrorString="Please Fill This"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Retailer Price*"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:digits="0123456789"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:singleLine="true"
                android:backgroundTint="@color/green_900"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/black"
                android:textColorHint="@color/green_900"
                android:textSize="17sp"
                tools:ignore="HardcodedText" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            whatever:boxCornerRadiusBottomEnd="5dp"
            whatever:boxCornerRadiusBottomStart="5dp"
            whatever:boxCornerRadiusTopEnd="5dp"
            whatever:boxCornerRadiusTopStart="5dp"
            android:gravity="center"
            whatever:boxStrokeColor="@color/light_black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/light_black">

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/wholesalerAmount"
                whatever:testErrorString="Enter Valid Amount"
                whatever:emptyErrorString="Please Fill This"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wholesaler Price*"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:digits="0123456789"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:singleLine="true"
                android:backgroundTint="@color/green_900"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/black"
                android:textColorHint="@color/green_900"
                android:textSize="17sp"
                tools:ignore="HardcodedText" />

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/layoutborder"
            android:gravity="center">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                app:siRadius="5dp"/>

            <TextView
                android:id="@+id/chooseProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Product Image"
                android:fontFamily="@font/montserratmedium"
                android:background="@drawable/uploadborder"
                android:textColor="@color/white"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <TextView
            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_back"
            android:text="Next"
            android:textColor="@color/white"
            android:drawablePadding="50dp"
            android:layout_marginBottom="40dp"
            android:padding="5dp"
            android:gravity="center"
            android:fontFamily="@font/montserratmedium"
            android:drawableTint="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>